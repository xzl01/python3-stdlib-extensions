	  cd 3.13 && $(SET_ENV13) python3.13 setup.py install \
		--root=$(CURDIR)/$(d_tk) --install-layout=deb; \
	  mkdir -p $(d_tk)/usr/lib/python3.13/lib-dynload; \
	  mv $(d_tk)/usr/lib/python3/dist-packages/*.so \
	    $(d_tk)/usr/lib/python3.13/lib-dynload; \
	  rm -rf $(d_tk)/usr/lib/python3/dist-packages; \
	else \
	  cd 3.13 && $(SET_ENV13) python3.13 setup.py install \
		--root=$(CURDIR)/$(d_tk) --install-layout=deb; \
	fi
	mkdir -p $(d_tk)/usr/lib/python3.13/lib-dynload
	mv $(d_tk)/usr/lib/python3/*-packages/*.so \
		$(d_tk)/usr/lib/python3.13/lib-dynload/
	mkdir -p $(d_gdbm)/usr/lib/python3.13/lib-dynload
	mv $(d_tk)/usr/lib/python3.13/lib-dynload/_gdbm*.so \
		$(d_gdbm)/usr/lib/python3.13/lib-dynload/
  ifeq ($(with_dbmmodule),yes)
	if [ -f $(d_tk)/usr/lib/python3.13/lib-dynload/_dbm*.so ]; then \
	  mv $(d_tk)/usr/lib/python3.13/lib-dynload/_dbm*.so \
		$(d_gdbm)/usr/lib/python3.13/lib-dynload/; \
	fi
  endif
	rm -rf $(d_tk)/usr/lib/python3
	cp -r 3.13/Lib/tkinter $(d_tk)/usr/lib/python3.13/.
	rm -rf $(d_tk)/usr/lib/python3.13/tkinter/test

	mkdir -p $(d_dist)/usr/lib/python3.13
	find $(d_dist) -name __pycache__ | xargs -r rm -rf
endif

dbg-install-py3.13: #dbg-stamp-py3.13
ifeq (0,1)
	: # FIXME: 3.13 install errors out ...
	if [ "3.13" = 3.13 ]; then \
	  cd 3.13 && $(SET_ENV13) python3.13-dbg setup.py install \
		--root=$(CURDIR)/$(d_tk)-dbg --install-layout=deb; \
	  mkdir -p $(d_tk)/usr/lib/python3.13/lib-dynload; \
